<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koreait.member.mapper.ApplyMapper">
    <resultMap id="applyMap" type="com.koreait.member.dto.ApplyDTO">
        <id property="id" column="id"/>
        <result property="studyId" column="study_id"/>
        <result property="memberId" column="member_id"/>
        <result property="applyAt" column="apply_at"/>
    </resultMap>

    <insert id="save" parameterType="com.koreait.member.dto.ApplyDTO">
        INSERT INTO study_apply (study_id, member_id, apply_at)
        VALUES (#{studyId}, #{memberId}, NOW())
    </insert>

    <select id="findByMemberId" resultMap="applyMap">
        SELECT * FROM study_apply WHERE member_id = #{memberId}
    </select>

    <select id="findByStudyId" resultMap="applyMap">
        SELECT * FROM study_apply WHERE study_id = #{studyId}
    </select>

    <select id="findByStudyAndMember" resultMap="applyMap">
        SELECT * FROM study_apply WHERE study_id = #{studyId} AND member_id = #{memberId}
    </select>

    <select id="countByStudyId" resultType="int">
        SELECT COUNT(*) FROM study_apply WHERE study_id = #{studyId}
    </select>

    <select id="findStudiesByMemberId" resultMap="applyMap">
        SELECT s.id, s.title, s.description, s.max_members, s.deadline, s.created_by
        FROM study s
                 JOIN study_apply a ON s.id = a.study_id
        WHERE a.member_id = #{memberId}
    </select>

</mapper>
